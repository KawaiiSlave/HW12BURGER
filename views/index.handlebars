<div class="row justify-content-center">

    <h1>Burger Devourer</h1>

</div>



<div class="row">

    <ul class="burger-list offset-2 col-6">

        <h2>Ready-to-eat</h2>

        {{#each burger}}

        {{#unless dataValues.devoured}}

        <li>

            {{dataValues.burger_type}}

            <button class="eat-burger" data-id={{dataValues.id}}>Eat Da Burger!</button>

        </li>

        {{/unless}}

        {{/each}}

    </ul>

    <ul class="devoured-list align-self-end">

        <h2>Devoured burgers!</h2>

        {{#each burger}}

        {{#if dataValues.devoured}}

        <li>

            {{dataValues.burger_type}}

        </li>

        {{/if}}

        {{/each}}

    </ul>

</div>

<div class="form-group">

    <label for="burg"></label>

    <textarea class="form-control offset-5 col-2" name="burg_name" id="burg" rows="3"></textarea>

</div>

<div class="row justify-content-center new-burger">

    <button type="submit" class="btn btn-primary">Create Burger</button>

	